.insta
    width 100%
    box-sizing border-box
    display flex
    flex-wrap wrap
    align-items center
    justify-content space-evenly
    margin-top 67px
    .insta_article
        display flex
        flex-direction column
        flex-wrap nowrap
        width 610px
        border-radius 20px
        position: relative;
        border: 2px solid transparent;
        background: #fff;
        background-clip: padding-box;
        &::after                
            content:'';
            position: absolute;
            top: -2px; 
            bottom: -2px;
            left: -2px; 
            right: -2px;
            background: linear-gradient(to top, rgba(240,161,68,1) 0%, rgba(224,82,71,1) 87%);
            border-radius: 20px;
            z-index: -1;        
        h2 
            margin 0
            margin-top 43px
            margin-left 31px
            font-family 'Montserrat', sans-serif
            font-size 20px
            font-weight 700
            line-height 30px
            text-transform uppercase
            letter-spacing 0.6px
            color: #e05247;
        p 
            margin 0
            margin-left 29px
            margin-top 35px
            margin-right 15px
            color: #000000;
            font-family 'Montserrat', sans-serif
            font-size: 17px;
            font-weight: 400;
            line-height: 25px;
            letter-spacing: 0.48px;
        a 
            margin-left 31px
            margin-top 35px
            padding-bottom 39px 
            color: #e05247                     
            font-family 'Montserrat', sans-serif
            font-size: 16px;
            font-weight: 600;
            line-height: 25px;
            text-transform: uppercase;
        &:hover
            background-image: linear-gradient(to left, #f0a144 0%, #e05247 100%);
            box-shadow 0 61px 95px rgba(0, 0, 0, 0.24)
            &:after 
                        content:'';
                        display none
            h2      
                color #fff
            p   
                color #fff
            a  
                color #fff
