        .card_btn
            display flex
            flex-direction column
            align-items center
            margin-left 10px            
            .card_btn_vue
                position relative
                width: 189px;
                height: 55px;                
                margin-bottom 15px
                // text
                color: #e15247;
                font-family 'Montserrat', sans-serif
                font-size: 16px;
                font-weight: 500;
                line-height: 25px;                
                letter-spacing: 0.48px;
                border: 2px solid transparent;
                border-radius: 27px;
                background: #fff;
                background-clip: padding-box;
                &::after                
                    content:'';
                    position: absolute;
                    top: -2px; 
                    bottom: -2px;
                    left: -2px; 
                    right: -2px;
                    background: linear-gradient(123deg, rgba(240,161,68,1) 0%, rgba(224,82,71,1) 87%);
                    border-radius: 27px;
                    z-index: -1;
            .card_btn_vue_color
                width: 189px;
                height: 55px;
                border-radius: 27px;
                outline none
                border none
                margin-bottom 15px
