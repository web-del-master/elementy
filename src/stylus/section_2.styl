                letter-spacing 0.48px
                background linear-gradient(87deg, rgba(240,161,68,1) 0%, rgba(224,82,71,1) 99%)
            .card_btn_slide                
                .prev
                    width: 65px;
                    height: 65px;
                    outline none
                    border none
                    border-radius 50%
                    background-image: linear-gradient(to right, #f0a144 0%, #e05247 100%)
                    margin-right 20px
                    img
                        margin-left -4px
                .next
                    width 65px
                    height 65px
