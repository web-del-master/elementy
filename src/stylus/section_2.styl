.smm
    width 100%
    display flex
    margin-top 35px
    .smm_offer
        margin-top 5px
        flex-basis 300px
        h1
            color: #000;
            font-family: 'Montserrat', sans-serif;
            font-size: 20px;
            font-weight: 600;
            line-height: 70.07px;
            letter-spacing: 0.43px;
        p
            font-family: 'Montserrat', sans-serif;
            font-size: 16px;
            font-weight: 400;
            line-height: 22px;
            letter-spacing: 1.42px;

    .smm_descripption
        flex-basis 990px
        display flex        
        .card
            box-sizing border-box
            display flex
            flex-direction column
            align-items center           
            width: 295px;                        
            border-radius: 20px;
            position: relative;
            border: 2px solid transparent;
            background: #fff;
            background-clip: padding-box;
            margin 0 11px 0 11px
            box-shadow: 0 0 40px rgba(0, 0, 0, 0.11);
            &::after                
                content:'';
                position: absolute;
                top: -2px; 
                bottom: -2px;
                left: -2px; 
                right: -2px;
                background: linear-gradient(123deg, rgba(240,161,68,1) 0%, rgba(224,82,71,1) 87%);
                border-radius: 20px;
                z-index: -1;                               
            h2
                color #e05247
                font-family 'Montserrat', sans-serif
                font-size: 20px;
                font-weight: 700;
                line-height: 30px;
                text-transform: uppercase;
                /* Text style for "Название у" */
                letter-spacing: 0.6px;
                margin-top 33px 
                margin-left -24px               
            p   
                color: #000000;
                font-family 'Montserrat', sans-serif
                font-size: 16px;
                font-weight: 400;
                line-height: 25px;
                letter-spacing: 0.48px;
                margin-left 21px
            a
                margin-top auto
                text-align center
                margin-bottom 24px
                margin-top 2px
                padding-top 7px
                color: #ffffff;
                font-family 'Montserrat', sans-serif
                font-size: 16px;
                font-weight: 500;
                line-height: 25px;
                width: 166px;
                height: 38px;
                border-radius: 19px;               
                background: linear-gradient(123deg, rgba(240,161,68,1) 0%, rgba(224,82,71,1) 87%);           
            span                
                font-family 'Montserrat', sans-serif
                font-size: 24px;
                font-weight: 400;
                line-height: 36.73px
                margin-bottom 16px
                .bold
                    font-family 'Montserrat', sans-serif
                    font-size: 26px;
                    font-weight: 600;
                    padding-left 8px                    
