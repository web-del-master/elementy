.call_to_action
    width 100%
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content center
    align-items flex-start
    margin-top 120px
    .call_to_action__bg
        width 50%        
    .call_to_action__form
        width 50%        
        h2 
            margin-top 30px
            margin-left 26px
            color: #000000;
            font-family 'Montserrat', sans-serif
            font-size: 28px;
            font-weight: 700;
            line-height: 30px;
            text-transform: uppercase;
            letter-spacing: 0.75px;
        p
            margin-top 22px
            margin-left 26px
            color: #000000;
            font-family 'Montserrat', sans-serif
            font-size: 16px;
            font-weight: 400;
            line-height: 25px;
            /* Text style for "Оставьте з" */
            letter-spacing: 0.48px;
        form
            margin-top 30px
            margin-left 26px
            label
                font-family 'Montserrat', sans-serif
                font-size: 14px;
                font-weight: 700;
                line-height: 25px;
                letter-spacing: 0.42px;                
                .conf_color
                    color: #e25b47;
                    font-family: "Montserrat Medium";
                    font-weight: 500;
                    letter-spacing: 0.42px;
                    text-decoration: underline;
                    font-family 'Montserrat', sans-serif
                    display block
                    margin-left 7px
                .label_marg
                    padding-left 20px
            label[for="conf"]
                font-family 'Montserrat', sans-serif
                font-size: 16px;
                font-weight: 400;
                line-height: 25px;
                letter-spacing: 0.42px;
                margin-top 30px
            label[for="feed"]
                font-family 'Montserrat', sans-serif
                font-size: 16px;
                font-weight: 400;
                line-height: 25px;
                letter-spacing: 0.42px;
            input[type="text"]
                width: 295px;
                height: 55px;
                border-radius: 27px;
                border 2px solid #e05247
                margin-top 13px
                padding-left 20px
                margin-right 16px
            input[type="tel"]
                width: 295px;
                height: 55px;
                border-radius: 27px;
                border 2px solid #e05247
                margin-top 13px
                padding-left 20px
            input[type="email"]
                width: 610px;
                height: 55px;
                border-radius: 27px;
                border 2px solid #e05247
                margin-top 13px
                padding-left 20px
            input[type="checkbox"]
                appearance none
                &:checked
                    +span
                        background-image url("/img/checkbox/checkbox_checked.png")
            label
                .checkbox
                    display inline-block
                    width 15px
                    height 15px
                    background-image url("/img/checkbox/checkbox.png")
                    vertical-align middle 
                    margin-right 5px
            input[type="button"]
                margin-top 25px
                width: 249px;
                height: 55px;
                border-radius: 27px;
                background-image: linear-gradient(to right, #f0a144 0%, #e05247 100%)
                color: #ffffff;
                font-family 'Montserrat', sans-serif
                font-size: 16px;
                font-weight: 500;
                line-height: 25px;
                letter-spacing: 0.48px;
                outline none
                border none

